#navbar-container{class: (current_page?(root_path) ? 'navbar-transparent' : '', style: current_page?(root_path) ? 'position:absolute' : 'position:fixed'}
  .container
    #nav-logo-container
      -unless current_page?(root_path)
        = link_to image_tag("cocktail_icon.png",width:50), root_path
    #nav-links
      %ul.hidden-xs.hidden-sm
        %li= link_to "BLOG", blog_posts_path
        -if user_signed_in?
          %li= link_to "#{current_user.name}", '#nav-mobile-menu'
          %li= link_to "LOG OUT", destroy_user_session_path, method: :delete
        -else
          %li= link_to "LOG IN", new_user_session_path
          -# %li= link_to "SIGN UP", new_user_registration_path, class: 'nav-sign-up'
      %ul#nav-mobile.visible-xs.visible-sm
        %li= link_to '<i class="fa fa-bars"></i>'.html_safe, '#nav-mobile-menu', id: 'nav-bars'
  .collapse#nav-mobile-menu
    .container.visible-xs.visible-sm
      .well#nav-mobile-menu-content
        %ul.nav.nav-pills.nav-stacked
          %li= link_to "BLOG", blog_posts_path
          -if user_signed_in?
            %li= link_to "#{current_user.name}", '#nav-mobile-menu'
            %li= link_to "LOG OUT", destroy_user_session_path, method: :delete
          -else
            %li= link_to "LOG IN", new_user_session_path
            -# %li.active= link_to "SIGN UP", new_user_registration_path
